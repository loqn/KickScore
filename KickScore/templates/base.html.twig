<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href={{ asset('favicon.ico') }}>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
{% if is_granted('IS_IMPERSONATOR') %}
    <div class="fixed w-full bg-blue-900 hover:bg-blue-800 transition ease-in duration-200 border-slate-200 px-4 py-1.5 text-xs">
        <div class="max-w-7xl mx-auto flex justify-between items-center">
        <span class="flex items-center gap-2 text-white">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
            </svg>
            <span class="font-medium">Mode incarnation :</span>
            {{ app.user.mail }}
        </span>
            <a href="?_switch_user=_exit"
               class="flex items-center gap-1 text-white hover:text-gray-200 transition-colors font-medium">
                <span>Quitter</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
            </a>
        </div>
    </div>
{% endif %}
{% include '_nav.html.twig' %}
<div class="transition-all duration-300" id="main-container">
    <main class="min-h-screen" style="background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);">
        {% block body %}{% endblock %}
    </main>
</div>

</body>
</html>