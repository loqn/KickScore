{% extends 'base.html.twig' %}

{% block title %}Sélectionner un championnat - KickScore{% endblock %}

{% block body %}
    <div class="h-[calc(100vh-2rem)]">
        <div class="h-full bg-gradient-to-br from-slate-50 to-white rounded-xl p-8">
            <div class="max-w-3xl mx-auto">
                <div class="mb-8 flex items-center justify-between">
                    <h1 class="text-3xl font-bold text-slate-800">
                        Sélectionner un championnat
                        <span class="block mt-1 text-lg text-slate-600 font-normal">
                            Exporter les données du championnat
                        </span>
                    </h1>
                </div>

                <div class="bg-white rounded-lg shadow-sm border border-slate-200 divide-y divide-slate-200">
                    <form method="post" action="{{ path('download_orga') }}" id="championship-form">
                        <div class="p-6">
                            <h2 class="text-xl font-semibold text-slate-800 mb-4">Sélection du championnat</h2>

                            <div class="space-y-6">
                                <div class="relative">
                                    <label for="championship" class="block text-sm font-medium text-slate-500 mb-2">
                                        Championnats disponibles
                                    </label>
                                    <div class="relative">
                                        <select
                                                name="championship"
                                                id="championship"
                                                class="block w-full rounded-lg border border-slate-200 bg-white px-4 py-3 pr-10 text-base text-slate-800 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500/20 appearance-none"
                                                required
                                        >
                                            <option value="" disabled selected>Sélectionnez un championnat</option>
                                            {% for championship in championships %}
                                                <option value="{{ championship.id }}" {% if championship.id == select %}selected{% endif %}
                                                        class="py-2">
                                                    {{ championship.name }}
                                                </option>
                                            {% endfor %}
                                        </select>
                                        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-slate-500">
                                            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                                            </svg>
                                        </div>
                                    </div>
                                    <p class="mt-2 text-sm text-slate-500">
                                        Choisissez le championnat dont vous souhaitez exporter les données
                                    </p>
                                </div>

                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('export') }}">
                            </div>
                        </div>

                        <div class="p-6 bg-slate-50 rounded-b-lg flex items-center justify-between">
                            <button
                                    type="submit"
                                    class="px-4 py-2 bg-blue-900 text-white rounded-lg hover:bg-blue-800 transition-colors font-medium shadow-sm flex items-center space-x-2"
                            >
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
                                </svg>
                                <span>Télécharger</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}