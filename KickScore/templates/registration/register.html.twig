{% extends 'base.html.twig' %}

{% block title %}Inscription - KickScore{% endblock %}

{% block body %}
    <div class="h-[calc(100vh-2rem)]">
        <div class="h-full flex items-center justify-center bg-gradient-to-br from-slate-50 to-white rounded-xl p-8">
            <div class="w-full max-w-md">
                <h1 class="text-4xl font-bold text-slate-800 text-center mb-8">
                    Créez votre compte
                    <span class="block mt-2 text-blue-900 text-2xl font-medium">
                        C'est rapide !
                    </span>
                </h1>

                {% for message in app.flashes('success') %}
                    <div class="bg-green-50 border border-green-200 text-green-800 rounded-lg p-4 mb-6">
                        <p class="text-sm font-medium">{{ message }}</p>
                    </div>
                {% endfor %}
                {% for message in app.flashes('error') %}
                    <div class="bg-red-50 border border-red-200 text-red-800 rounded-lg p-4 mb-6">
                        <p class="text-sm font-medium">{{ message }}</p>
                    </div>
                {% endfor %}

                {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}
                <div class="space-y-1">
                    {{ form_label(registrationForm.FirstName, null, {'label_attr': {'class': 'text-sm font-medium text-slate-700'}}) }}
                    {{ form_widget(registrationForm.FirstName, {'attr': {'class': 'w-full px-4 py-3 rounded-lg border border-slate-200 focus:ring-2 focus:ring-blue-900 focus:border-blue-900 transition-colors'}}) }}
                    {{ form_errors(registrationForm.FirstName, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                </div>

                <div class="space-y-1">
                    {{ form_label(registrationForm.Name, null, {'label_attr': {'class': 'text-sm font-medium text-slate-700'}}) }}
                    {{ form_widget(registrationForm.Name, {'attr': {'class': 'w-full px-4 py-3 rounded-lg border border-slate-200 focus:ring-2 focus:ring-blue-900 focus:border-blue-900 transition-colors'}}) }}
                    {{ form_errors(registrationForm.Name, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                </div>

                <div class="space-y-1">
                    {{ form_label(registrationForm.Mail, null, {'label_attr': {'class': 'text-sm font-medium text-slate-700'}}) }}
                    {{ form_widget(registrationForm.Mail, {'attr': {'class': 'w-full px-4 py-3 rounded-lg border border-slate-200 focus:ring-2 focus:ring-blue-900 focus:border-blue-900 transition-colors'}}) }}
                    {{ form_errors(registrationForm.Mail, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                </div>

                <div class="space-y-1">
                    {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'text-sm font-medium text-slate-700'}}) }}
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'w-full px-4 py-3 rounded-lg border border-slate-200 focus:ring-2 focus:ring-blue-900 focus:border-blue-900 transition-colors'}}) }}
                    {{ form_errors(registrationForm.plainPassword, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                </div>

                <div class="hidden">
                    {{ form_widget(registrationForm.IsOrganizer) }}
                </div>

                <div class="pt-4">
                    <button type="submit" class="w-full px-8 py-4 bg-blue-900 text-white rounded-lg hover:bg-blue-800 transition-colors font-medium text-lg shadow-sm">
                        Créer mon compte
                    </button>

                    <div class="text-center mt-4">
                        <a href="{{ path('app_login') }}" class="text-blue-900 hover:text-blue-800 font-medium">
                            Déjà inscrit ? Connectez-vous
                        </a>
                    </div>
                </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}