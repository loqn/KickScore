{% extends 'base.html.twig' %}

{% block title %}Hello TeamController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="bg-gray-100 flex items-center justify-center min-h-screen">

    <form class="bg-white p-6 rounded-lg shadow-md w-full max-w-sm" method="post" action="{{ path('app_team_create') }}">
        <h2 class="text-2xl font-bold mb-4 text-gray-700">Create a new team</h2>
        
        <!-- Name Input -->
        <div class="mb-4">
            <label for="name" class="block text-gray-700 font-medium mb-2">Name</label>
            <input type="text" id="name" name="name" placeholder="team's name"
                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>

        <div id="structure" class="mb-4">
            <label for="structure" class="block text-gray-700 font-medium mb-2">structure</label>
            <input type="text" id="structure" name="structure" placeholder="the team's structure"
                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>

        <div id="win" class="mb-4">
            <label for="win" class="block text-gray-700 font-medium mb-2">win</label>
            <input type="number" id="win" name="win" placeholder="number of game win"
                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>

        <div id="lose" class="mb-4">
            <label for="lose" class="block text-gray-700 font-medium mb-2">lose</label>
            <input type="number" id="lose" name="lose" placeholder="number of game lose"
                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>

        <div id="draw" class="mb-4">
            <label for="draw" class="block text-gray-700 font-medium mb-2">draw</label>
            <input type="number" id="draw" name="draw" placeholder="number of game draw"
                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>


        <!-- Submit Button -->
        <button type="submit" class="w-full bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500">
            Send
        </button>
    </form>
    
</div>
{% endblock %}
