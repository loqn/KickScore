{% extends 'base.html.twig' %}

{% block title %}Création d'une équipe - KickScore{% endblock %}

{% block body %}
    <div class="h-[calc(100vh-2rem)]">
        <div class="h-full flex items-center justify-center bg-gradient-to-br from-slate-50 to-white rounded-xl p-8">
            <div class="w-full max-w-md">
                <h1 class="text-4xl font-bold text-slate-800 text-center mb-8">
                    Création
                    <span class="block mt-2 text-blue-900 text-2xl font-medium">
                    d'une nouvelle équipe
                </span>
                </h1>

                <form method="post" action="{{ path('app_team_create') }}"
                      class="space-y-6 bg-white rounded-lg shadow-sm border border-slate-100 p-6">
                    {% for message in app.flashes('success') %}
                        <div class="bg-green-50 border border-green-200 text-green-800 rounded-lg p-4 mb-6">
                            <p class="text-sm font-medium">{{ message }}</p>
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('error') %}
                        <div class="bg-red-50 border border-red-200 text-red-800 rounded-lg p-4 mb-6">
                            <p class="text-sm font-medium">{{ message }}</p>
                        </div>
                    {% endfor %}
                    <!-- Nom de l'équipe -->
                    <div class="space-y-1">
                        <label for="name" class="text-sm font-medium text-slate-700">Nom</label>
                        <input type="text" id="name" name="name"
                               placeholder="Nom de l'équipe"
                               class="w-full px-4 py-3 rounded-lg border border-slate-200 focus:ring-2 focus:ring-blue-900 focus:border-blue-900 transition-colors"
                               required>
                    </div>

                    <!-- Structure -->
                    <div class="space-y-1">
                        <label for="structure" class="text-sm font-medium text-slate-700">
                            Structure
                            <span class="text-slate-500 text-sm font-normal">(optionnel)</span>
                        </label>
                        <input type="text" id="structure" name="structure"
                               placeholder="Structure de l'équipe"
                               class="w-full px-4 py-3 rounded-lg border border-slate-200 focus:ring-2 focus:ring-blue-900 focus:border-blue-900 transition-colors">
                    </div>

                    {% if not app.user or not app.user.member or not app.user.member.team %}
                        <!-- Option pour rejoindre l'équipe -->
                        <div class="flex items-center space-x-3 pt-2">
                            <input type="checkbox" id="userJoin" name="userJoin" value="1"
                                   class="w-4 h-4 text-blue-900 border-slate-300 rounded focus:ring-blue-900">
                            <label for="userJoin" class="text-sm font-medium text-slate-700">
                                Rejoindre cette équipe
                            </label>
                        </div>
                    {% endif %}

                    <!-- Bouton de soumission -->
                    <div class="pt-4">
                        <button type="submit"
                                class="w-full px-8 py-4 bg-blue-900 text-white rounded-lg hover:bg-blue-800 transition-colors font-medium text-lg shadow-sm">
                            Créer l'équipe
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}