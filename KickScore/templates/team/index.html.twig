{% extends 'base.html.twig' %}

{% block title %}Création d'une équipe - KickScore{% endblock %}

{% block body %}
    <div class="h-[calc(100vh-2rem)]">
        <div class="h-full flex items-center justify-center bg-gradient-to-br from-slate-50 to-white rounded-xl p-8">
            <div class="w-full max-w-md">
                <h1 class="text-4xl font-bold text-slate-800 text-center mb-8">
                    Création
                    <span class="block mt-2 text-blue-900 text-2xl font-medium">
                    d'une nouvelle équipe
                </span>
                </h1>

                <form method="post" action="{{ path('app_team_create') }}"
                      class="space-y-6 bg-white rounded-lg shadow-sm border border-slate-100 p-6">
                    {% for message in app.flashes('success') %}
                        <div class="bg-green-50 border border-green-200 text-green-800 rounded-lg p-4 mb-6">
                            <p class="text-sm font-medium">{{ message }}</p>
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('error') %}
                        <div class="bg-red-50 border border-red-200 text-red-800 rounded-lg p-4 mb-6">
                            <p class="text-sm font-medium">{{ message }}</p>
                        </div>
                    {% endfor %}
                    <div class="space-y-1">
                        <label for="name" class="text-sm font-medium text-slate-700">Nom</label>
                        <input type="text" id="name" name="name" placeholder="Nom de l'équipe" class="w-full px-4 py-3 rounded-lg border border-slate-200 focus:ring-2 focus:ring-blue-900 focus:border-blue-900 transition-colors" required>
                    </div>

                    <div id="structure" class="mb-4">
                        <label for="structure" class="block text-gray-700 font-medium mb-2">Structure
                            (optionnel)</label>
                        <input type="text" id="structure" name="structure" placeholder="Structure de l'équipe"
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>

                    <input type="hidden" name="csrf_token" value="{{ csrf_token('create_team') }}">
                    <input type="hidden" name="user_id" value="{{ app.user.id }}">

                    <div class="pt-4">
                        <button type="submit"
                                class="w-full px-8 py-4 bg-blue-900 text-white rounded-lg hover:bg-blue-800 transition-colors font-medium text-lg shadow-sm">
                            Créer l'équipe
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}