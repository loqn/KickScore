{% extends 'base.html.twig' %}

{% block title %}Création d'une équipe - KickScore{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="bg-gray-100 flex items-center justify-center min-h-screen">

    <form class="bg-white p-6 rounded-lg shadow-md w-full max-w-sm" method="post" action="{{ path('app_team_create') }}">
        <h2 class="text-2xl font-bold mb-4 text-gray-700">Créer une nouvelle équipe</h2>
        
        <div class="mb-4">
            <label for="name" class="block text-gray-700 font-medium mb-2">Nom</label>
            <input type="text" id="name" name="name" placeholder="Nom de l'équipe"
                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>

        <div id="structure" class="mb-4">
            <label for="structure" class="block text-gray-700 font-medium mb-2">Structure (optionnel)</label>
            <input type="text" id="structure" name="structure" placeholder="the team's structure"
                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>

        <div id="win" class="mb-4">
            <label for="win" class="block text-gray-700 font-medium mb-2">Victoire(s)</label>
            <input type="number" id="win" name="win" placeholder="Nombre de victoires"
                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>

        <div id="lose" class="mb-4">
            <label for="lose" class="block text-gray-700 font-medium mb-2">Défaite(s)</label>
            <input type="number" id="lose" name="lose" placeholder="Nombre de défaites"
                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>

        <div id="draw" class="mb-4">
            <label for="draw" class="block text-gray-700 font-medium mb-2">Égalité(s)</label>
            <input type="number" id="draw" name="draw" placeholder="Nombre de matchs nuls"
                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>

        <div id="player" class="mb-4">
            <label for="player" class="block text-gray-700 font-medium mb-2">Membre(s)</label>
            <select id="player" name="player" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                {% for player in players %}
                    <option value="{{ player.id }}">{{ player.name }}</option>
                {% endfor %}
            </select>
        </div>
        <div id="player" class="mb-4">
            <label for="userJoin" class="text-gray-700 font-medium mb-2">Rejoindre l'équipe</label>
            <input type="checkbox" id="userJoin" name="userJoin" value="1" class="mr-2">
        </div>
        <button type="submit" class="w-full bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500">
            Send
        </button>
    </form>
    
</div>
{% endblock %}
