{% extends 'base.html.twig' %}

{% block title %}Profil utilisateur - KickScore{% endblock %}

{% block body %}
    <div class="h-[calc(100vh-2rem)]">
        <div class="h-full bg-gradient-to-br from-slate-50 to-white rounded-xl p-8">
            <div class="max-w-3xl mx-auto">
                <div class="mb-8 flex items-center justify-between">
                    <h1 class="text-3xl font-bold text-slate-800">
                        Profil utilisateur
                        <span class="block mt-1 text-lg text-slate-600 font-normal">
                            Détails du compte
                        </span>
                    </h1>

                    <div class="space-x-3">
                        <a href="{{ path('app_user_index') }}"
                           class="px-4 py-2 bg-slate-100 text-slate-700 rounded-lg hover:bg-slate-200 transition-colors font-medium">
                            Retour à la liste
                        </a>
                    </div>
                </div>

                <div class="bg-white rounded-lg shadow-sm border border-slate-200 divide-y divide-slate-200">
                    <div class="p-6">
                        <h2 class="text-xl font-semibold text-slate-800 mb-4">Informations personnelles</h2>
                        <div class="grid grid-cols-2 gap-6">
                            <div>
                                <p class="text-sm font-medium text-slate-500">Prénom</p>
                                <p class="mt-1 text-slate-800">{{ user.FirstName }}</p>
                            </div>
                            <div>
                                <p class="text-sm font-medium text-slate-500">Nom</p>
                                <p class="mt-1 text-slate-800">{{ user.name }}</p>
                            </div>
                            <div>
                                <p class="text-sm font-medium text-slate-500">Email</p>
                                <p class="mt-1 text-slate-800">{{ user.mail }}</p>
                            </div>
                            <div>
                                <p class="text-sm font-medium text-slate-500">Rôle</p>
                                <p class="mt-1">
                                    <span class="inline-flex px-3 py-1 text-sm font-medium rounded-full
                                        {% if user.isOrganizer %}
                                            bg-purple-100 text-purple-800
                                        {% else %}
                                            bg-blue-100 text-blue-800
                                        {% endif %}">
                                        {{ user.isOrganizer ? 'Organisateur' : 'Utilisateur' }}
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="p-6 bg-slate-50 rounded-b-lg flex items-center justify-between">
                        <div class="flex items-center space-x-3">
                            <a href="{{ path('app_user_edit', {'id': user.id}) }}"
                               class="px-4 py-2 bg-blue-900 text-white rounded-lg hover:bg-blue-800 transition-colors font-medium shadow-sm">
                                Modifier le profil
                            </a>
                            {{ include('user/_delete_form.html.twig') }}
                        </div>

                        <p class="text-sm text-slate-500">
                            ID: {{ user.id }}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        const deleteBtn = document.getElementById('deleteBtn');
        const deleteForm = document.getElementById('deleteForm');

        deleteBtn.addEventListener('click', () => {
            deleteForm.submit();
        });
    </script>
{% endblock %}