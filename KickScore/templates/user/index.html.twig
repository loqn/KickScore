{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs - KickScore{% endblock %}

{% block body %}
    <div class="h-[calc(100vh-2rem)]">
        <div class="h-full bg-gradient-to-br from-slate-50 to-white rounded-xl p-8">
            <div class="max-w-7xl mx-auto">
                <div class="mb-8 flex justify-between items-center">
                    <h1 class="text-3xl font-bold text-slate-800">
                        Liste des utilisateurs
                        <span class="block mt-1 text-lg text-slate-600 font-normal">
                            Gérez les utilisateurs de la plateforme
                        </span>
                    </h1>

                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_user_new') }}"
                           class="px-6 py-3 bg-blue-900 text-white rounded-lg hover:bg-blue-800 transition-colors font-medium shadow-sm">
                            Nouvel utilisateur
                        </a>
                    {% endif %}
                </div>

                <div class="bg-white rounded-lg shadow-sm border border-slate-200 overflow-hidden">
                    <table class="w-full">
                        <thead class="bg-slate-50 border-b border-slate-200">
                        <tr>
                            <th class="px-6 py-4 text-left text-sm font-medium text-slate-700">Nom</th>
                            <th class="px-6 py-4 text-left text-sm font-medium text-slate-700">Prénom</th>
                            <th class="px-6 py-4 text-left text-sm font-medium text-slate-700">Email</th>
                            <th class="px-6 py-4 text-left text-sm font-medium text-slate-700">Rôle</th>
                            <th class="px-6 py-4 text-left text-sm font-medium text-slate-700">Actions</th>
                        </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-200">
                        {% for user in users %}
                            <tr class="hover:bg-slate-50 transition-colors">
                                <td class="px-6 py-4 text-sm text-slate-600">
                                    {{ user.name }}
                                </td>
                                <td class="px-6 py-4 text-sm text-slate-600">
                                    {{ user.FirstName }}
                                </td>
                                <td class="px-6 py-4 text-sm text-slate-600">
                                    {{ user.mail }}
                                </td>
                                <td class="px-6 py-4">
                                    <span class="px-3 py-1 text-xs font-medium rounded-full
                                        {% if user.isOrganizer %}
                                            bg-purple-100 text-purple-800
                                        {% else %}
                                            bg-blue-100 text-blue-800
                                        {% endif %}">
                                        {{ user.isOrganizer ? 'Organisateur' : 'Utilisateur' }}
                                    </span>
                                </td>
                                <td class="px-6 py-4 text-sm space-x-3">
                                    <a href="{{ path('app_user_show', {'id': user.id}) }}"
                                       class="text-blue-600 hover:text-blue-800 font-medium">
                                        Voir
                                    </a>
                                    <a href="{{ path('app_user_edit', {'id': user.id}) }}"
                                       class="text-slate-600 hover:text-slate-800 font-medium">
                                        Modifier
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="px-6 py-8 text-center text-slate-600">
                                    Aucun utilisateur n'a été trouvé.
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}