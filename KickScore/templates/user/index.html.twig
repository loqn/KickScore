{% extends 'base.html.twig' %}

{% block title %}{{ 'user_list.title'|trans }} - KickScore{% endblock %}

{% block body %}
    <div class="bg-gradient-to-br from-slate-50 to-white min-h-screen">
        <div class="max-w-7xl mx-auto px-4 py-6 sm:px-6 lg:px-8">
            <div class="mb-8">
                <div class="mb-6 md:mb-8 flex flex-col space-y-4 md:space-y-0 md:flex-row md:justify-between md:items-center">
                    <div class="flex-1">
                        <h1 class="text-xl sm:text-2xl md:text-3xl font-bold text-slate-800 text-center md:text-left">
                            {{ 'user_list.title'|trans }}
                            <span class="block mt-1 text-sm sm:text-base md:text-lg text-slate-600 font-normal">
                                {{ 'user_list.subtitle'|trans }}
                            </span>
                        </h1>
                    </div>
                </div>

                {# Flash messages remain unchanged #}

                <div class="bg-white rounded-lg shadow-sm border border-slate-200 overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-slate-50 border-b border-slate-200">
                        <tr>
                            <th class="px-4 sm:px-6 py-3 sm:py-4 text-left text-xs sm:text-sm font-medium text-slate-700">
                                {{ 'user_list.table.name'|trans }}
                            </th>
                            <th class="px-4 sm:px-6 py-3 sm:py-4 text-left text-xs sm:text-sm font-medium text-slate-700">
                                {{ 'user_list.table.firstname'|trans }}
                            </th>
                            <th class="px-4 sm:px-6 py-3 sm:py-4 text-left text-xs sm:text-sm font-medium text-slate-700">
                                {{ 'user_list.table.email'|trans }}
                            </th>
                            <th class="px-4 sm:px-6 py-3 sm:py-4 text-left text-xs sm:text-sm font-medium text-slate-700">
                                {{ 'user_list.table.role'|trans }}
                            </th>
                            <th class="px-4 sm:px-6 py-3 sm:py-4 text-left text-xs sm:text-sm font-medium text-slate-700">
                                {{ 'user_list.table.actions'|trans }}
                            </th>
                        </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-200">
                        {% for user in users %}
                            <tr class="hover:bg-slate-50 transition-colors">
                                <td class="px-4 sm:px-6 py-3 sm:py-4 text-xs sm:text-sm text-slate-600 whitespace-nowrap">
                                    {{ user.name }}
                                </td>
                                <td class="px-4 sm:px-6 py-3 sm:py-4 text-xs sm:text-sm text-slate-600 whitespace-nowrap">
                                    {{ user.FirstName }}
                                </td>
                                <td class="px-4 sm:px-6 py-3 sm:py-4 text-xs sm:text-sm text-slate-600">
                                    {{ user.mail }}
                                </td>
                                <td class="px-4 sm:px-6 py-3 sm:py-4">
                                    <span class="px-2 sm:px-3 py-1 text-xs font-medium rounded-full
                                        {% if user.isOrganizer %}
                                            bg-purple-100 text-purple-800
                                        {% else %}
                                            bg-blue-100 text-blue-800
                                        {% endif %}">
                                        {{ user.isOrganizer ? 'user_list.table.organizer'|trans : 'user_list.table.user'|trans }}
                                    </span>
                                </td>
                                <td class="px-4 sm:px-6 py-3 sm:py-4 text-xs sm:text-sm space-x-2 sm:space-x-3 whitespace-nowrap">
                                    <a href="{{ path('app_user_show', {'id': user.id}) }}"
                                       class="text-blue-600 hover:text-blue-800 font-medium">
                                        {{ 'user_list.table.view'|trans }}
                                    </a>
                                    <a href="{{ path('app_user_edit', {'id': user.id}) }}"
                                       class="text-slate-600 hover:text-slate-800 font-medium">
                                        {{ 'user_list.table.edit'|trans }}
                                    </a>
                                    <a href="{{ path('app_user_impersonate', {'id': user.id}) }}"
                                       class="text-indigo-600 hover:text-indigo-800 font-medium">
                                        {{ 'user_list.table.impersonate'|trans }}
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="px-4 sm:px-6 py-6 sm:py-8 text-center text-sm text-slate-600">
                                    {{ 'user_list.no_users'|trans }}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            {# Section Championnats #}
 <div class="mt-12">
    <div class="mb-6 flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4">
        <h1 class="text-xl sm:text-2xl md:text-3xl font-bold text-slate-800">
            {{ 'championship_list.title'|trans }}
            <span class="block mt-1 text-sm sm:text-base md:text-lg text-slate-600 font-normal">
                {{ 'championship_list.subtitle'|trans }}
            </span>
        </h1>

        {% if is_granted('ROLE_ORGANIZER') %}
            <a href="{{ path('app_meet') }}"
               class="w-full sm:w-auto px-4 sm:px-6 py-2 sm:py-3 bg-blue-900 text-white rounded-lg hover:bg-blue-800 transition-colors font-medium shadow-sm text-center">
                {{ 'championship_list.new_championship'|trans }}
            </a>
        {% endif %}
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-slate-200 overflow-hidden">
        <div class="divide-y divide-slate-200">
            {% for championship in championships %}
                <div class="hover:bg-slate-50">
                    <div class="flex items-center justify-between px-4 sm:px-6 py-4 cursor-pointer"
                         onclick="toggleChampionship('championship-{{ championship.id }}')">
                        <div class="flex flex-col sm:flex-row sm:items-center gap-2 sm:gap-4">
                            <h2 class="text-base sm:text-lg font-medium text-slate-800">{{ championship.name }}</h2>
                            <span class="px-2 sm:px-3 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800 w-fit">
                                {{ 'championship_list.teams_count'|trans({'%count%': championship.teams|length}) }}
                            </span>
                        </div>
                        <svg class="w-5 h-5 text-slate-500 transform transition-transform duration-200 flex-shrink-0"
                             id="championship-icon-{{ championship.id }}"
                             xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd"
                                  d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                                  clip-rule="evenodd"/>
                        </svg>
                    </div>

                    <div class="hidden bg-slate-50" id="championship-{{ championship.id }}">
                        {% for team in championship.teams %}
                            <div class="border-t border-slate-200">
                                <div class="flex items-center justify-between px-6 sm:px-8 py-3 hover:bg-slate-100">
                                    <div class="flex flex-1 items-center cursor-pointer"
                                         onclick="toggleTeam('team-{{ team.id }}')">
                                        <div class="flex flex-col sm:flex-row sm:items-center gap-2 sm:gap-4">
                                            <h3 class="text-sm sm:text-base font-medium text-slate-700">{{ team.name }}</h3>
                                            <span class="px-2 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-800 w-fit">
                                                {{ 'championship_list.team.members_count'|trans({'%count%': team.members|length}) }}
                                            </span>
                                        </div>
                                        <svg class="w-4 h-4 text-slate-500 transform transition-transform duration-200 flex-shrink-0 ml-4"
                                             id="team-icon-{{ team.id }}"
                                             xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
                                        </svg>
                                    </div>
                                    <a href="{{ path('app_team_edit', {'id': team.id}) }}"
                                       class="ml-4 px-3 py-1.5 text-xs font-medium bg-blue-900 text-white hover:bg-blue-800 rounded-md transition-colors">
                                        {{ 'championship_list.team.manage'|trans }}
                                    </a>
                                </div>

                                <div class="hidden" id="team-{{ team.id }}">
                                    <div class="px-4 sm:px-8 py-3 bg-white border-t border-slate-200 overflow-x-auto">
                                        <table class="w-full">
                                            <thead class="bg-slate-50">
                                            <tr>
                                                <th class="px-3 sm:px-4 py-2 text-left text-xs font-medium text-slate-700">
                                                    {{ 'championship_list.team.table.name'|trans }}
                                                </th>
                                                <th class="px-3 sm:px-4 py-2 text-left text-xs font-medium text-slate-700">
                                                    {{ 'championship_list.team.table.firstname'|trans }}
                                                </th>
                                                <th class="px-3 sm:px-4 py-2 text-left text-xs font-medium text-slate-700">
                                                    {{ 'championship_list.team.table.email'|trans }}
                                                </th>
                                                <th class="px-3 sm:px-4 py-2 text-left text-xs font-medium text-slate-700">
                                                    {{ 'championship_list.team.table.role'|trans }}
                                                </th>
                                            </tr>
                                            </thead>
                                            <tbody class="divide-y divide-slate-100">
                                            {% for member in team.members %}
                                                <tr class="hover:bg-slate-50">
                                                    <td class="px-3 sm:px-4 py-2 text-xs text-slate-600">{{ member.name }}</td>
                                                    <td class="px-3 sm:px-4 py-2 text-xs text-slate-600">{{ member.fname }}</td>
                                                    <td class="px-3 sm:px-4 py-2 text-xs text-slate-600">{{ member.email }}</td>
                                                    <td class="px-3 sm:px-4 py-2">
                                                        <span class="px-2 py-1 text-xs font-medium rounded-full bg-slate-100 text-slate-800">
                                                            {{ 'championship_list.team.table.member'|trans }}
                                                        </span>
                                                    </td>
                                                </tr>
                                            {% else %}
                                                <tr>
                                                    <td colspan="4" class="px-3 sm:px-4 py-4 text-center text-xs text-slate-600">
                                                        {{ 'championship_list.team.no_members'|trans }}
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <div class="px-6 sm:px-8 py-4 text-center text-sm text-slate-600 border-t border-slate-200">
                                {{ 'championship_list.no_teams'|trans }}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% else %}
                <div class="px-4 sm:px-6 py-6 sm:py-8 text-center text-sm text-slate-600">
                    {{ 'championship_list.no_championships'|trans }}
                </div>
            {% endfor %}
        </div>
    </div>
</div>

    <script>
        function toggleChampionship(id) {
            const content = document.getElementById(id);
            const icon = document.getElementById('championship-icon-' + id.split('-')[1]);
            content.classList.toggle('hidden');
            icon.classList.toggle('rotate-180');
        }

        function toggleTeam(id) {
            const content = document.getElementById(id);
            const icon = document.getElementById('team-icon-' + id.split('-')[1]);
            content.classList.toggle('hidden');
            icon.classList.toggle('rotate-180');
        }
    </script>
{% endblock %}