<form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}"
    onsubmit="return confirm('{{ 'deleteuser'|trans }}');"
      class="inline-block">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button type="submit"
            class="px-4 py-2 bg-red-100 text-red-700 rounded-lg hover:bg-red-200 transition-colors font-medium">
        {{ 'Delete'|trans }}
    </button>
</form>

<script>
    const btn = document.createElement('button');
    btn.addEventListener('click', () => {
        {% if app.user and app.user.member and app.user.member.team  %}
        alert({{ 'userteam'|trans }});
        {% endif %}
    });
</script>