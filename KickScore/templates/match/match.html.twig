{% extends 'base.html.twig' %}

{% block title %}Liste des compétitions - KickScore{% endblock %}

{% block body %}
    <div class="bg-gradient-to-br from-slate-50 to-white min-h-screen">
        <div class="max-w-7xl mx-auto px-4 py-6 sm:px-6 lg:px-8">
            {# Header #}
            <div class="mb-6 md:mb-8 flex flex-col space-y-4 md:space-y-0 md:flex-row md:justify-between md:items-center">
                <div class="flex-1">
                    <h1 class="text-xl sm:text-2xl md:text-3xl font-bold text-slate-800 text-center md:text-left">
                        Liste des matchs par compétition
                        <span class="block mt-1 text-sm sm:text-base md:text-lg text-slate-600 font-normal">
                Consultez les performances de chaque équipe au sein de chaque compétition.
            </span>
                    </h1>
                </div>

                <div class="flex flex-col sm:flex-row gap-3 items-center">
                    <select id="championshipSelect"
                            class="block w-full sm:w-auto min-w-[200px] rounded-lg border border-slate-200 bg-white px-4 py-3 pr-10 text-base text-slate-800 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500/20">
                        {% for championship in championships %}
                            <option value="{{ championship.id }}">
                                {{ championship.name }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
            </div>

            {% for message in app.flashes('user_success') %}
                <div class="bg-green-50 border border-green-200 text-green-800 rounded-lg p-4 mb-6">
                    <p class="text-sm font-medium">{{ message }}</p>
                </div>
            {% endfor %}
            {% for message in app.flashes('user_error') %}
                <div class="bg-red-50 border border-red-200 text-red-800 rounded-lg p-4 mb-6">
                    <p class="text-sm font-medium">{{ message }}</p>
                </div>
            {% endfor %}

            {% for championship in championships %}
                <div id="championship-{{ championship.id }}" class="bg-white rounded-lg shadow-sm border border-slate-200 {% if not loop.first %}hidden{% endif %}">
                    <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4 px-4 sm:px-6 py-3 sm:py-4 border-b border-slate-200">
                        <h2 class="text-lg sm:text-xl font-semibold text-slate-800">{{ championship.name }}</h2>

                        {% if app.user and app.user.member and app.user.member.team %}
                            {% if championship in app.user.member.team.championships %}
                                <form action="{{ path('leave_championship', {'id': championship.id}) }}" method="POST">
                                    <input type="hidden" name="_token" value="{{ csrf_token('join' ~ championship.id) }}">
                                    <button type="submit"
                                            class="w-full sm:w-auto px-4 py-2 bg-red-400 text-white text-sm rounded-lg hover:bg-red-500 transition-colors font-medium shadow-sm">
                                        Quitter
                                    </button>
                                </form>
                            {% else %}
                                <form action="{{ path('join_championship', {'id': championship.id}) }}" method="POST">
                                    <input type="hidden" name="_token" value="{{ csrf_token('join' ~ championship.id) }}">
                                    <button type="submit"
                                            class="w-full sm:w-auto px-4 py-2 bg-green-600 text-white text-sm rounded-lg hover:bg-green-700 transition-colors font-medium shadow-sm">
                                        Rejoindre
                                    </button>
                                </form>
                            {% endif %}
                        {% endif %}
                    </div>

                    <div class="overflow-x-auto">
                        <div class="inline-block min-w-full">
                            <div class="overflow-hidden">
                                <table class="min-w-full divide-y divide-slate-200">
                                    <thead class="bg-slate-50">
                                    <tr>
                                        <th scope="col" class="px-3 sm:px-6 py-3 text-left text-xs font-medium text-slate-700 uppercase tracking-wider">
                                            Date
                                        </th>
                                        <th scope="col" class="hidden sm:table-cell px-3 sm:px-6 py-3 text-left text-xs font-medium text-slate-700 uppercase tracking-wider">
                                            Équipe verte
                                        </th>
                                        <th scope="col" class="hidden sm:table-cell px-3 sm:px-6 py-3 text-left text-xs font-medium text-slate-700 uppercase tracking-wider">
                                            Équipe bleue
                                        </th>
                                        <th scope="col" class="px-3 sm:px-6 py-3 text-left text-xs font-medium text-slate-700 uppercase tracking-wider">
                                            Score
                                        </th>
                                        {% if is_granted('ROLE_ORGANIZER') %}
                                            <th scope="col" class="px-3 sm:px-6 py-3 text-right text-xs font-medium text-slate-700 uppercase tracking-wider">
                                                Actions
                                            </th>
                                        {% endif %}
                                    </tr>
                                    </thead>
                                    <tbody class="bg-white divide-y divide-slate-200">
                                    {% for match in championship.matches %}
                                        <tr class="hover:bg-slate-50 transition-colors">
                                            <td class="px-3 sm:px-6 py-4 whitespace-nowrap">
                                                <div class="flex flex-col sm:flex-row gap-1">
                                                    <span class="text-xs sm:text-sm text-slate-600">{{ match.date|date('d/m/Y H:i') }}</span>
                                                    <!-- Version mobile uniquement -->
                                                    <div class="sm:hidden text-xs text-slate-500">
                                                        <div class="text-green-700 font-bold">{{ match.greenteam.name }}</div>
                                                        <div class="text-blue-700 font-bold">{{ match.blueteam.name }}</div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="hidden sm:table-cell px-3 sm:px-6 py-4 text-xs sm:text-sm text-slate-600">
                                                {{ match.greenteam.name }}
                                            </td>
                                            <td class="hidden sm:table-cell px-3 sm:px-6 py-4 text-xs sm:text-sm text-slate-600">
                                                {{ match.blueteam.name }}
                                            </td>
                                            <td class="px-3 sm:px-6 py-4">
                                                <span class="text-green-700 font-bold text-base sm:text-lg">{{ match.greenscore }}</span>
                                                <span class="text-slate-600 font-bold text-base sm:text-lg"> - </span>
                                                <span class="text-blue-700 font-bold text-base sm:text-lg">{{ match.bluescore }}</span>
                                            </td>
                                            {% if is_granted('ROLE_ORGANIZER') %}
                                                <td class="px-3 sm:px-6 py-4 text-right">
                                                    <a href="{{ path('edit_match', {'id': match.id}) }}"
                                                       class="inline-flex items-center px-3 py-1.5 bg-blue-900 text-white text-xs sm:text-sm rounded-lg hover:bg-blue-800 transition-colors font-medium shadow-sm">
                                                        <svg class="w-3 h-3 mr-1 sm:hidden" viewBox="0 0 20 20" fill="currentColor">
                                                            <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"/>
                                                        </svg>
                                                        <span>Modifier</span>
                                                    </a>
                                                </td>
                                            {% endif %}
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="{{ is_granted('ROLE_ORGANIZER') ? 5 : 4 }}" class="px-3 sm:px-6 py-6 text-center text-xs sm:text-sm text-slate-600">
                                                Il n'y a aucun match dans ce championnat.
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="bg-white rounded-lg shadow-sm border border-slate-200 px-4 sm:px-6 py-6 sm:py-8 text-center text-sm sm:text-base text-slate-600">
                    Aucun championnat n'a été trouvé.
                </div>
            {% endfor %}
        </div>
    </div>

    <script>
        // Set initial selected option based on URL parameter or first championship
        const urlParams = new URLSearchParams(window.location.search);
        const championshipId = urlParams.get('championship') || document.getElementById('championshipSelect').value;
        document.getElementById('championshipSelect').value = championshipId;

        // Show the selected championship's matches
        const showChampionship = (id) => {
            document.querySelectorAll('[id^="championship-"]').forEach(div => {
                div.classList.add('hidden');
            });
            document.getElementById(`championship-${id}`).classList.remove('hidden');
        };

        // Show initial championship
        showChampionship(championshipId);

        // Handle championship selection change
        document.getElementById('championshipSelect').addEventListener('change', function() {
            const championshipId = this.value;
            showChampionship(championshipId);
            // Update URL without page reload
            const url = new URL(window.location);
            url.searchParams.set('championship', championshipId);
            window.history.pushState({}, '', url);
        });
    </script>
{% endblock %}