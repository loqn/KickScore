{% extends 'base.html.twig' %}

{% block title %}Liste des matchs - KickScore{% endblock %}

{% block body %}
    <div class="h-[calc(100vh-2rem)]">
        <div class="h-full bg-gradient-to-br from-slate-50 to-white rounded-xl p-8">
            <div class="max-w-7xl mx-auto">
                <div class="mb-8 flex justify-between items-center">
                    <h1 class="text-3xl font-bold text-slate-800">
                        Liste des matchs
                        <span class="block mt-1 text-lg text-slate-600 font-normal">
                            Consultez tous les matchs
                        </span>
                    </h1>

                    {% if is_granted('ROLE_ORGANIZER') %}
                    <a href="{{ path('app_meet') }}"
                       class="px-6 py-3 bg-blue-900 text-white rounded-lg hover:bg-blue-800 transition-colors font-medium shadow-sm">
                        Nouveau match
                    </a>
                    {% endif %}
                </div>

                <div class="bg-white rounded-lg shadow-sm border border-slate-200">
                    <table class="w-full">
                        <thead class="bg-slate-50 border-b border-slate-200">
                        <tr>
                            <th class="px-6 py-4 text-left text-sm font-medium text-slate-700">Date</th>
                            <th class="px-6 py-4 text-left text-sm font-medium text-slate-700">Équipe 1</th>
                            <th class="px-6 py-4 text-left text-sm font-medium text-slate-700">Équipe 2</th>
                            <th class="px-6 py-4 text-left text-sm font-medium text-slate-700">Score</th>
                        </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-200">
                        {% for match in matches %}
                            <tr class="hover:bg-slate-50 transition-colors">
                                <td class="px-6 py-4 text-sm text-slate-600">
                                    {{ match.date|date('d/m/Y H:i') }}
                                </td>
                                <td class="px-6 py-4 text-sm text-slate-600">
                                    {{ match.greenteam.name }}
                                </td>
                                <td class="px-6 py-4 text-sm text-slate-600">
                                    {{ match.blueteam.name }}
                                </td>
                                <td class="px-6 py-4 text-sm text-slate-600">
                                    <span class="text-green-700 font-bold"> {{ match.greenscore }}</span> - <span class="text-blue-700 font-bold">{{ match.bluescore }}</span>
                                </td>
{#                                <td class="px-6 py-4">#}
{#                                        <span class="px-3 py-1 text-xs font-medium rounded-full#}
{#                                            {% if match.status == 'pending' %}#}
{#                                                bg-yellow-100 text-yellow-800#}
{#                                            {% elseif match.status == 'in_progress' %}#}
{#                                                bg-blue-100 text-blue-800#}
{#                                            {% else %}#}
{#                                                bg-green-100 text-green-800#}
{#                                            {% endif %}">#}
{#                                            {{ match.status|title }}#}
{#                                        </span>#}
{#                                </td>#}
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="px-6 py-8 text-center text-slate-600">
                                    Aucun match n'a été trouvé.
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}