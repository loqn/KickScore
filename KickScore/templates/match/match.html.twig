{% extends 'base.html.twig' %}

{% block title %}Liste des compétitions - KickScore{% endblock %}

{% block body %}
    <div class="bg-gradient-to-br from-slate-50 to-white min-h-screen">
        <div class="max-w-7xl mx-auto px-4 py-6 sm:px-6 lg:px-8">
            {# Header #}
            <div class="mb-6 md:mb-8 flex flex-col space-y-4 md:space-y-0 md:flex-row md:justify-between md:items-center">
                <div class="flex-1">
                    <h1 class="text-xl sm:text-2xl md:text-3xl font-bold text-slate-800 text-center md:text-left">
                        Liste des matchs
                        <span class="block mt-1 text-sm sm:text-base md:text-lg text-slate-600 font-normal">
                            Consultez tous les matchs par compétition
                        </span>
                    </h1>
                </div>

                <div class="flex flex-col sm:flex-row gap-3 items-center">
                    <select id="championshipSelect"
                            class="block w-full sm:w-auto min-w-[200px] rounded-lg border border-slate-200 bg-white px-4 py-3 pr-10 text-base text-slate-800 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500/20">
                        {% for championship in championships %}
                            <option value="{{ championship.id }}">
                                {{ championship.name }}
                            </option>
                        {% endfor %}
                    </select>

                    <div class="flex gap-3">
                        <form action="{{ path('export_orga') }}" method="POST" class="flex-shrink-0">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('export') }}">
                            <button type="submit"
                                    class="px-3 sm:px-4 md:px-6 py-2 sm:py-3 bg-blue-900 text-white text-sm sm:text-base rounded-lg hover:bg-blue-800 transition-colors font-medium shadow-sm flex items-center justify-center space-x-2">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 sm:h-5 sm:w-5" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd"/>
                                </svg>
                                <span>Export</span>
                            </button>
                        </form>

                        {% if is_granted('ROLE_ORGANIZER') %}
                            <a href="{{ path('app_meet') }}"
                               class="px-3 sm:px-4 md:px-6 py-2 sm:py-3 bg-blue-900 text-white text-sm sm:text-base rounded-lg hover:bg-blue-800 transition-colors font-medium shadow-sm text-center">
                                Nouveau match
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>

            {% for message in app.flashes('user_success') %}
                <div class="bg-green-50 border border-green-200 text-green-800 rounded-lg p-4 mb-6">
                    <p class="text-sm font-medium">{{ message }}</p>
                </div>
            {% endfor %}
            {% for message in app.flashes('user_error') %}
                <div class="bg-red-50 border border-red-200 text-red-800 rounded-lg p-4 mb-6">
                    <p class="text-sm font-medium">{{ message }}</p>
                </div>
            {% endfor %}

            {% for championship in championships %}
                <div id="championship-{{ championship.id }}" class="bg-white rounded-lg shadow-sm border border-slate-200 {% if not loop.first %}hidden{% endif %}">
                    <div class="flex justify-between items-center px-4 sm:px-6 py-3 sm:py-4 border-b border-slate-200">
                        <h2 class="text-lg sm:text-xl font-semibold text-slate-800">{{ championship.name }}</h2>

                        {% if app.user and app.user.member and app.user.member.team %}
                            {% if championship in app.user.member.team.championships %}
                                <form action="{{ path('leave_championship', {'id': championship.id}) }}" method="POST">
                                    <input type="hidden" name="_token" value="{{ csrf_token('join' ~ championship.id) }}">
                                    <button type="submit"
                                            class="px-4 py-2 bg-red-400 text-white text-sm rounded-lg hover:bg-red-500 transition-colors font-medium shadow-sm">
                                        Quitter
                                    </button>
                                </form>
                            {% else %}
                                <form action="{{ path('join_championship', {'id': championship.id}) }}" method="POST">
                                    <input type="hidden" name="_token" value="{{ csrf_token('join' ~ championship.id) }}">
                                    <button type="submit"
                                            class="px-4 py-2 bg-green-600 text-white text-sm rounded-lg hover:bg-green-700 transition-colors font-medium shadow-sm">
                                        Rejoindre
                                    </button>
                                </form>
                            {% endif %}
                        {% endif %}
                    </div>

                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead class="bg-slate-50 border-b border-slate-200">
                            <tr>
                                <th class="px-4 sm:px-6 py-3 sm:py-4 text-left text-xs sm:text-sm font-medium text-slate-700">
                                    Date
                                </th>
                                <th class="px-4 sm:px-6 py-3 sm:py-4 text-left text-xs sm:text-sm font-medium text-slate-700">
                                    Équipe verte
                                </th>
                                <th class="px-4 sm:px-6 py-3 sm:py-4 text-left text-xs sm:text-sm font-medium text-slate-700">
                                    Équipe bleue
                                </th>
                                <th class="px-4 sm:px-6 py-3 sm:py-4 text-left text-xs sm:text-sm font-medium text-slate-700">
                                    Score
                                </th>
                                {% if is_granted('ROLE_ORGANIZER') %}
                                    <th class="px-4 sm:px-6 py-3 sm:py-4 text-left text-xs sm:text-sm font-medium text-slate-700">
                                        Actions
                                    </th>
                                {% endif %}
                            </tr>
                            </thead>
                            <tbody class="divide-y divide-slate-200">
                            {% for match in championship.matches %}
                                <tr class="hover:bg-slate-50 transition-colors">
                                    <td class="px-4 sm:px-6 py-3 sm:py-4 text-xs sm:text-sm text-slate-600 whitespace-nowrap">
                                        {{ match.date|date('d/m/Y H:i') }}
                                    </td>
                                    <td class="px-4 sm:px-6 py-3 sm:py-4 text-xs sm:text-sm text-slate-600">
                                        {{ match.greenteam.name }}
                                    </td>
                                    <td class="px-4 sm:px-6 py-3 sm:py-4 text-xs sm:text-sm text-slate-600">
                                        {{ match.blueteam.name }}
                                    </td>
                                    <td class="px-4 sm:px-6 py-3 sm:py-4 text-xs sm:text-sm text-slate-600">
                                        <span class="text-green-700 font-bold text-lg">{{ match.greenscore }}</span>
                                        <span class="text-slate-600 font-bold text-lg"> - </span>
                                        <span class="text-blue-700 font-bold text-lg">{{ match.bluescore }}</span>
                                    </td>
                                    {% if is_granted('ROLE_ORGANIZER') %}
                                        <td class="px-4 sm:px-6 py-3 sm:py-4 text-xs sm:text-sm text-slate-600">
                                            <a href="{{ path('edit_match', {'id': match.id}) }}"
                                               class="inline-flex items-center px-3 py-1.5 bg-blue-900 text-white text-sm rounded-lg hover:bg-blue-800 transition-colors font-medium shadow-sm">
                                                Modifier
                                            </a>
                                        </td>
                                    {% else %}

                                    {% endif %}
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="{{ is_granted('ROLE_ORGANIZER') ? 5 : 4 }}" class="px-4 sm:px-6 py-6 sm:py-8 text-center text-sm text-slate-600">
                                        Il n'y a aucun match dans ce championnat.
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            {% else %}
                <div class="bg-white rounded-lg shadow-sm border border-slate-200 px-4 sm:px-6 py-6 sm:py-8 text-center text-sm sm:text-base text-slate-600">
                    Aucun championnat n'a été trouvé.
                </div>
            {% endfor %}
        </div>
    </div>

    <script>
        // Set initial selected option based on URL parameter or first championship
        const urlParams = new URLSearchParams(window.location.search);
        const championshipId = urlParams.get('championship') || document.getElementById('championshipSelect').value;
        document.getElementById('championshipSelect').value = championshipId;

        // Show the selected championship's matches
        const showChampionship = (id) => {
            document.querySelectorAll('[id^="championship-"]').forEach(div => {
                div.classList.add('hidden');
            });
            document.getElementById(`championship-${id}`).classList.remove('hidden');
        };

        // Show initial championship
        showChampionship(championshipId);

        // Handle championship selection change
        document.getElementById('championshipSelect').addEventListener('change', function() {
            const championshipId = this.value;
            showChampionship(championshipId);
            // Update URL without page reload
            const url = new URL(window.location);
            url.searchParams.set('championship', championshipId);
            window.history.pushState({}, '', url);
        });
    </script>
{% endblock %}