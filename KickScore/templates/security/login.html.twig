{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post" class="max-w-md mx-auto p-6">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal text-2xl text-center">Veuillez vous connecter</h1>
        <div class="flex flex-col space-y-4 w-full">
            <div class="flex flex-col">
                <label for="inputMail" class="mb-1">Mail</label>
                <input type="text" value="{{ last_username }}" name="Mail" id="inputMail"
                       class="form-control px-3 py-2 border rounded"
                       autocomplete="username" required autofocus>
            </div>

            <div class="flex flex-col">
                <label for="inputPassword" class="mb-1">Mot de passe</label>
                <input type="password" name="password" id="inputPassword"
                       class="form-control px-3 py-2 border rounded"
                       autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}">
        </div>

        <div class="checkbox mb-3 mt-4">
            <label class="flex items-center">
                <input type="checkbox" name="_remember_me" class="mr-2">
                <span>Se souvenir de moi</span>
            </label>
        </div>

        <button class="w-full bg-blue-500 hover:bg-blue-700 transition ease-in duration-150 text-white font-bold py-2 px-4 rounded" type="submit">
            Se connecter
        </button>
    </form>
{% endblock %}
