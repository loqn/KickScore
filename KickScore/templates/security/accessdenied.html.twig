{% extends 'base.html.twig' %}
{% block title %}Accès refusé - KickScore{% endblock %}

{% block body %}
    <div class="h-[calc(100vh-2rem)]">
        <div class="h-full flex items-center justify-center bg-gradient-to-br from-slate-50 to-white rounded-xl p-8">
            <div class="w-full max-w-md text-center">
                <h1 class="text-4xl font-bold text-slate-800 mb-8">
                  {{ 'access_denied.title'|trans }}
                    <span class="block mt-2 text-red-600 text-2xl font-medium">
                     {{ 'access_denied.subtitle'|trans }}
                    </span>
                </h1>

                <div class="p-4 text-red-700 bg-red-100 rounded-lg mb-6">
                    {{ 'access_denied.message'|trans }}
                </div>

                <a href="{{ path('app_root') }}" 
                   class="inline-block px-6 py-3 bg-blue-900 text-white rounded-lg hover:bg-blue-800 transition-colors">
                    {{ 'access_denied.back_home'|trans }}
                </a>
            </div>
        </div>
    </div>
{% endblock %}