<button
        onclick="toggleMenu()"
        class="fixed top-4 left-4 p-2 rounded-md bg-slate-50 text-slate-600 hover:bg-slate-100 transition-all duration-300 shadow-lg md:hidden z-40"
        id="menuButton">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
    </svg>
</button>

<script>
    function toggleMenu() {
        const nav = document.querySelector('nav');
        const overlay = document.getElementById('overlay');
        const body = document.body;
        const menuButton = document.getElementById('menuButton');

        nav.classList.toggle('-translate-x-full');
        body.classList.toggle('overflow-hidden');

        if (nav.classList.contains('-translate-x-full')) {
            overlay.classList.add('hidden');
            body.classList.remove('overflow-hidden');
            menuButton.style.left = '1rem';
            menuButton.classList.add('shadow-lg');
        } else {
            overlay.classList.remove('hidden');
            body.classList.add('overflow-hidden');
            menuButton.style.left = '14rem';
            menuButton.classList.remove('shadow-lg');
        }
    }

    window.addEventListener('resize', () => {
        if (window.innerWidth >= 768) {
            const nav = document.querySelector('nav');
            const overlay = document.getElementById('overlay');
            const body = document.body;
            const menuButton = document.getElementById('menuButton');

            nav.classList.add('-translate-x-full');
            overlay.classList.add('hidden');
            body.classList.remove('overflow-hidden');
            menuButton.style.left = '1rem';
        }
    });

    window.addEventListener('resize', () => {
        if (window.innerWidth >= 768) {
            const nav = document.querySelector('nav');
            const overlay = document.getElementById('overlay');
            const body = document.body;

            nav.classList.add('-translate-x-full');
            overlay.classList.add('hidden');
            body.classList.remove('overflow-hidden');
        }
    });
</script>