{% extends 'base.html.twig' %}

{% block title %}Création - KickScore{% endblock %}

{% block body %}
    <div class="h-[calc(100vh-2rem)]">
        <div class="h-full flex items-center justify-center bg-gradient-to-br from-slate-50 to-white rounded-xl p-8">
            <div class="w-full max-w-md">
                <h1 class="text-4xl font-bold text-slate-800 text-center mb-8">
                    Création
                    <span class="block mt-2 text-blue-900 text-2xl font-medium" id="subtitle">
                        d'un nouveau match ou championnat
                    </span>
                </h1>

                {% for message in app.flashes('success') %}
                    <div class="bg-green-50 border border-green-200 text-green-800 rounded-lg p-4 mb-6">
                        <p class="text-sm font-medium">{{ message }}</p>
                    </div>
                {% endfor %}
                {% for message in app.flashes('error') %}
                    <div class="bg-red-50 border border-red-200 text-red-800 rounded-lg p-4 mb-6">
                        <p class="text-sm font-medium">{{ message }}</p>
                    </div>
                {% endfor %}

                <!-- Tabs Navigation -->
                <nav class="flex border-b border-slate-200 mb-6">
                    <button id="tab_match"
                            class="px-6 py-3 text-sm font-medium border-b-2 border-transparent hover:border-slate-300 hover:text-slate-600 transition-colors relative -mb-[2px]">
                        Match
                    </button>
                    <button id="tab_championship"
                            class="px-6 py-3 text-sm font-medium border-b-2 border-transparent hover:border-slate-300 hover:text-slate-600 transition-colors relative -mb-[2px]">
                        Championnat
                    </button>
                </nav>

                <!-- Match Form Panel -->
                <div id="panel_match" class="hidden">

                    <form method="post" action="{{ path('app_meet_create') }}"
                          class="space-y-6 bg-white rounded-lg shadow-sm border border-slate-100 p-6">
                        <input type="hidden" name="addType" value="MATCH">

                        <!-- Championship Selection -->
                        <div class="space-y-1">
                            <label for="champ" class="text-sm font-medium text-slate-700">Compétition</label>
                            <select id="champ" name="champ"
                                    class="w-full px-4 py-3 rounded-lg border border-slate-200 focus:ring-2 focus:ring-blue-900 focus:border-blue-900 transition-colors">
                                {% for championship in championships %}
                                    <option value="{{ championship.id }}">{{ championship.name }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <!-- Teams Selection -->
                        <div class="grid grid-cols-2 gap-4">
                            <div class="space-y-1">
                                <label for="greenTeamSelect" class="text-sm font-medium text-slate-700">Équipe verte</label>
                                <select id="greenTeamSelect" name="greenTeam"
                                        class="w-full px-4 py-3 rounded-lg border border-slate-200 bg-green-50 focus:ring-2 focus:ring-blue-900 focus:border-blue-900 transition-colors">
                                    <option disabled selected value=""> -- Choisir -- </option>
                                    {% for team in teams %}
                                        <option value="{{ team.id }}">{{ team.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="space-y-1">
                                <label for="blueTeamSelect" class="text-sm font-medium text-slate-700">Équipe bleue</label>
                                <select id="blueTeamSelect" name="blueTeam"
                                        class="w-full px-4 py-3 rounded-lg border border-slate-200 bg-blue-50 focus:ring-2 focus:ring-blue-900 focus:border-blue-900 transition-colors">
                                    <option disabled selected value=""> -- Choisir -- </option>
                                    {% for team in teams %}
                                        <option value="{{ team.id }}">{{ team.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

                        <!-- Date and Scores -->
                        <div class="space-y-1">
                            <label for="dateInput" class="text-sm font-medium text-slate-700">Date du match</label>
                            <input type="datetime-local" id="dateInput" name="date"
                                   class="w-full px-4 py-3 rounded-lg border border-slate-200 focus:ring-2 focus:ring-blue-900 focus:border-blue-900 transition-colors">
                            <p id="date_valid" class="hidden text-sm text-green-600 mt-1"></p>
                        </div>

                        <div id="scores_container" class="hidden grid grid-cols-2 gap-4">
                            <div class="space-y-1">
                                <label for="greenscore" class="text-sm font-medium text-slate-700">Buts verts</label>
                                <input type="number" id="greenscore" name="greenscore"
                                       class="w-full px-4 py-3 rounded-lg border border-slate-200 bg-green-50 focus:ring-2 focus:ring-blue-900 focus:border-blue-900 transition-colors">
                            </div>
                            <div class="space-y-1">
                                <label for="bluescore" class="text-sm font-medium text-slate-700">Buts bleus</label>
                                <input type="number" id="bluescore" name="bluescore"
                                       class="w-full px-4 py-3 rounded-lg border border-slate-200 bg-blue-50 focus:ring-2 focus:ring-blue-900 focus:border-blue-900 transition-colors">
                            </div>
                        </div>

                        <button type="submit"
                                class="w-full px-8 py-4 bg-blue-900 text-white rounded-lg hover:bg-blue-800 transition-colors font-medium text-lg shadow-sm">
                            Créer le match
                        </button>
                    </form>
                </div>

                <!-- Championship Panel -->
                <div id="panel_championship" class="hidden">
                    <div class="space-y-6">
                        <div class="bg-white rounded-lg shadow-sm border border-slate-100 p-6">
                            <div class="flex flex-col space-y-4">
                                <a href="#" id="btn_manual"
                                   class="w-full py-3 px-4 rounded-lg text-slate-700 bg-slate-50 hover:bg-slate-100 transition-colors font-medium text-center">
                                    Créer manuellement
                                </a>
                                <a href="#" id="btn_import"
                                   class="w-full py-3 px-4 rounded-lg text-slate-700 bg-slate-50 hover:bg-slate-100 transition-colors font-medium text-center">
                                    Importer depuis un fichier
                                </a>
                            </div>
                        </div>

                        <!-- Manual Creation Form -->
                        <form id="championship_manual" method="post" action="{{ path('app_meet_create') }}"
                              class="hidden space-y-6 bg-white rounded-lg shadow-sm border border-slate-100 p-6">
                            <input type="hidden" name="addType" value="CHAMPIONSHIP">
                            <div class="space-y-1">
                                <label for="name" class="text-sm font-medium text-slate-700">Nom</label>
                                <input type="text" id="name" name="name"
                                       placeholder="Nom du championnat"
                                       class="w-full px-4 py-3 rounded-lg border border-slate-200 focus:ring-2 focus:ring-blue-900 focus:border-blue-900 transition-colors">
                            </div>
                            <button type="submit"
                                    class="w-full px-8 py-4 bg-blue-900 text-white rounded-lg hover:bg-blue-800 transition-colors font-medium text-lg shadow-sm">
                                Créer le championnat
                            </button>
                        </form>

                        <!-- Import Form -->
                        <form id="championship_import" method="post" action="{{ path('app_meet_import') }}"
                              class="hidden space-y-6 bg-white rounded-lg shadow-sm border border-slate-100 p-6"
                              enctype="multipart/form-data">
                            <div class="space-y-1">
                                <label for="file" class="text-sm font-medium text-slate-700">Fichier à importer</label>
                                <input type="file" id="file" name="file" required
                                       class="w-full px-4 py-3 rounded-lg border border-slate-200 focus:ring-2 focus:ring-blue-900 focus:border-blue-900 transition-colors">
                            </div>
                            <button type="submit"
                                    class="w-full px-8 py-4 bg-blue-900 text-white rounded-lg hover:bg-blue-800 transition-colors font-medium text-lg shadow-sm">
                                Importer le championnat
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Tabs management
        const tabs = {
            match: document.getElementById('tab_match'),
            championship: document.getElementById('tab_championship')
        };

        const panels = {
            match: document.getElementById('panel_match'),
            championship: document.getElementById('panel_championship')
        };

        const subtitle = document.getElementById('subtitle');

        function activateTab(tabId) {
            // Update tabs style
            Object.values(tabs).forEach(tab => {
                tab.classList.remove('text-blue-900', 'border-blue-900');
                tab.classList.add('text-slate-500', 'border-transparent');
            });
            tabs[tabId].classList.add('text-blue-900', 'border-blue-900');
            tabs[tabId].classList.remove('text-slate-500', 'border-transparent');

            // Show correct panel
            Object.values(panels).forEach(panel => panel.classList.add('hidden'));
            panels[tabId].classList.remove('hidden');

            // Update subtitle
            subtitle.textContent = tabId === 'match' ? "d'un nouveau match" : "d'un nouveau championnat";
        }

        // Initialize with match tab active
        activateTab('match');

        // Add click handlers
        tabs.match.addEventListener('click', () => activateTab('match'));
        tabs.championship.addEventListener('click', () => activateTab('championship'));

        // Championship panel handlers
        const btnManual = document.getElementById('btn_manual');
        const btnImport = document.getElementById('btn_import');
        const formManual = document.getElementById('championship_manual');
        const formImport = document.getElementById('championship_import');

        btnManual.addEventListener('click', (e) => {
            e.preventDefault();
            formManual.classList.remove('hidden');
            formImport.classList.add('hidden');

            // Mise à jour du style du bouton manuel
            btnManual.classList.add('bg-blue-900', 'text-white');
            btnManual.classList.remove('bg-slate-50', 'text-slate-700');  // Retire aussi text-slate-700

            // Reset du style du bouton import
            btnImport.classList.remove('bg-blue-900', 'text-white');
            btnImport.classList.add('bg-slate-50', 'text-slate-700');
        });

        btnImport.addEventListener('click', (e) => {
            e.preventDefault();
            formImport.classList.remove('hidden');
            formManual.classList.add('hidden');

            // Mise à jour du style du bouton import
            btnImport.classList.add('bg-blue-900', 'text-white');
            btnImport.classList.remove('bg-slate-50', 'text-slate-700');  // Retire aussi text-slate-700

            // Reset du style du bouton manuel
            btnManual.classList.remove('bg-blue-900', 'text-white');
            btnManual.classList.add('bg-slate-50', 'text-slate-700');
        });

        // Date and scores handler
        const dateInput = document.getElementById('dateInput');
        const scoresContainer = document.getElementById('scores_container');
        const dateValid = document.getElementById('date_valid');

        dateInput.addEventListener('change', () => {
            const date = new Date(dateInput.value);
            const now = new Date();

            if (date < now) {
                scoresContainer.classList.remove('hidden');
                dateValid.textContent = "Match passé - Saisie des scores activée";
            } else {
                scoresContainer.classList.add('hidden');
                dateValid.textContent = "Date valide pour un futur match";
            }

            dateValid.classList.remove('hidden');
            setTimeout(() => dateValid.classList.add('hidden'), 5000);
        });

        // Team selection handlers
        const greenTeamSelect = document.getElementById('greenTeamSelect');
        const blueTeamSelect = document.getElementById('blueTeamSelect');

        function updateTeamOptions(activeSelect, otherSelect) {
            Array.from(otherSelect.options).forEach(option => {
                option.disabled = option.value === activeSelect.value;
            });
        }

        greenTeamSelect.addEventListener('change', () => updateTeamOptions(greenTeamSelect, blueTeamSelect));
        blueTeamSelect.addEventListener('change', () => updateTeamOptions(blueTeamSelect, greenTeamSelect));
    </script>
{% endblock %}