{% extends 'base.html.twig' %}

{% block title %}Modification du match - KickScore{% endblock %}

{% block body %}
    <div class="h-[calc(100vh-2rem)]">
        <div class="h-full bg-gradient-to-br from-slate-50 to-white rounded-xl p-8">
            <div class="max-w-3xl mx-auto">
                <div class="mb-8 flex items-center justify-between">
                    <h1 class="text-3xl font-bold text-slate-800">
                        Modification du match
                        <span class="block mt-1 text-lg text-slate-600 font-normal">
                            Modification des informations du match
                        </span>
                    </h1>

                    <div class="space-x-3">
                        <a href="{{ path('app_match_list') }}"
                           class="px-4 py-2 bg-slate-100 text-slate-700 rounded-lg hover:bg-slate-200 transition-colors font-medium inline-flex items-center">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                            </svg>
                            Retour à la liste
                        </a>
                    </div>
                </div>

                <div class="bg-white rounded-lg shadow-sm border border-slate-200">
                    <div class="p-6">
                        <div class="max-w-2xl">
                            <form action="{{ path('update_match', {'id': match.id}) }}" method="POST" class="space-y-6">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('update' ~ match.id) }}">

                                {# Match Date #}
                                <div class="relative">
                                    <label for="date" class="block text-sm font-medium text-slate-700 mb-1">Date du match</label>
                                    <div class="relative">
                                        <input type="datetime-local"
                                               id="date"
                                               name="date"
                                               value="{{ match.date|date('Y-m-d\\TH:i') }}"
                                               class="block w-full px-4 py-2.5 rounded-lg border border-slate-200 focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-colors"
                                               required>
                                    </div>
                                </div>

                                {# Teams Section #}
                                <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                                    {# Green Team #}
                                    <div class="relative">
                                        <label for="greenTeam" class="block text-sm font-medium text-slate-700 mb-1">Équipe verte</label>
                                        <div class="relative">
                                            <select id="greenteam"
                                                    name="greenTeam"
                                                    class="block w-full bg-white px-4 py-2.5 rounded-lg border border-slate-200 focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-colors"
                                                    required>
                                                {% for team in teams %}
                                                    <option value="{{ team.id }}" {% if team.id == match.greenteam.id %}selected{% endif %}>
                                                        {{ team.name }}
                                                    </option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>

                                    {# Blue Team #}
                                    <div class="relative">
                                        <label for="blueTeam" class="block text-sm font-medium text-slate-700 mb-1">Équipe bleue</label>
                                        <div class="relative">
                                            <select id="blueteam"
                                                    name="blueTeam"
                                                    class="block w-full bg-white px-4 py-2.5 rounded-lg border border-slate-200 focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-colors"
                                                    required>
                                                {% for team in teams %}
                                                    <option value="{{ team.id }}" {% if team.id == match.blueteam.id %}selected{% endif %}>
                                                        {{ team.name }}
                                                    </option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                {# Scores Section #}
                                <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                                    {# Green Score #}
                                    <div class="relative">
                                        <label for="greenScore" class="block text-sm font-medium text-slate-700 mb-1">Score équipe verte</label>
                                        <div class="relative">
                                            <input type="number"
                                                   id="greenscore"
                                                   name="greenScore"
                                                   value="{{ match.greenscore }}"
                                                   min="0"
                                                   class="block w-full px-4 py-2.5 rounded-lg border border-slate-200 focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-colors"
                                                   required>
                                        </div>
                                    </div>

                                    {# Blue Score #}
                                    <div class="relative">
                                        <label for="blueScore" class="block text-sm font-medium text-slate-700 mb-1">Score équipe bleue</label>
                                        <div class="relative">
                                            <input type="number"
                                                   id="bluescore"
                                                   name="blueScore"
                                                   value="{{ match.bluescore }}"
                                                   min="0"
                                                   class="block w-full px-4 py-2.5 rounded-lg border border-slate-200 focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-colors"
                                                   required>
                                        </div>
                                    </div>
                                </div>

                                {# Championship #}
                                <div class="relative">
                                    <label class="block text-sm font-medium text-slate-700 mb-1">Championnat</label>
                                    <div class="flex items-center px-4 py-2.5 rounded-lg border border-slate-200 bg-slate-50">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trophy-fill mr-2" viewBox="0 0 16 16">
                                            <path d="M2.5.5A.5.5 0 0 1 3 0h10a.5.5 0 0 1 .5.5q0 .807-.034 1.536a3 3 0 1 1-1.133 5.89c-.79 1.865-1.878 2.777-2.833 3.011v2.173l1.425.356c.194.048.377.135.537.255L13.3 15.1a.5.5 0 0 1-.3.9H3a.5.5 0 0 1-.3-.9l1.838-1.379c.16-.12.343-.207.537-.255L6.5 13.11v-2.173c-.955-.234-2.043-1.146-2.833-3.012a3 3 0 1 1-1.132-5.89A33 33 0 0 1 2.5.5m.099 2.54a2 2 0 0 0 .72 3.935c-.333-1.05-.588-2.346-.72-3.935m10.083 3.935a2 2 0 0 0 .72-3.935c-.133 1.59-.388 2.885-.72 3.935"/>
                                        </svg>
                                        {{ match.championship.name }}
                                    </div>
                                </div>

                                <div class="p-6 bg-slate-50 rounded-lg flex items-center justify-between">
                                    <div class="flex items-center space-x-3">
                                        <button type="submit"
                                                class="px-4 py-2 bg-blue-900 text-white rounded-lg hover:bg-blue-800 transition-colors font-medium shadow-sm inline-flex items-center">
                                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                            </svg>
                                            Enregistrer les modifications
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}