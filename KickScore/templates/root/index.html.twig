{% extends 'base.html.twig' %}

{% block title %}KickScore{% endblock %}

{% block body %}
    <div class="h-[calc(100vh-2rem)]">
        <div class="h-full flex items-center justify-center bg-gradient-to-br from-slate-50 to-white rounded-xl p-8">
            <div class="max-w-3xl text-center space-y-6">
                {% if not app.user %}
                    <h1 class="text-5xl font-bold text-slate-800">
                        Gérez vos championnats
                        <span class="block mt-2 text-blue-900">
                            en toute simplicité
                        </span>
                    </h1>
                    <p class="text-xl text-slate-600">
                        KickScore vous accompagne dans l'organisation de vos tournois de RoboCup.
                    </p>
                    <div class="pt-8 flex gap-4 justify-center">
                        <a href="{{ path('app_register') }}"
                           class="px-8 py-4 bg-blue-900 text-white rounded-lg hover:bg-blue-800 transition-colors font-medium text-lg shadow-sm">
                            Commencer
                        </a>
                        <a href="{{ path('app_login') }}"
                           class="px-8 py-4 bg-white text-blue-900 rounded-lg hover:bg-slate-50 transition-colors font-medium text-lg border border-blue-200 shadow-sm">
                            Se connecter
                        </a>
                    </div>
                {% else %}
                    <h1 class="text-5xl font-bold text-slate-800">
                        Bienvenue {{ app.user.FirstName }}
                        <span class="block mt-2 text-blue-900">
                            sur KickScore
                        </span>
                    </h1>
                    <div class="pt-8 flex gap-4 justify-center">
                        {% if is_granted('ROLE_ORGANIZER') %}
                            <a href="{{ path('app_meet') }}"
                               class="px-8 py-4 bg-blue-900 text-white rounded-lg hover:bg-blue-800 transition-colors font-medium text-lg shadow-sm">
                                Création
                            </a>
                            <a href="{{ path('app_user_index') }}"
                               class="px-8 py-4 bg-blue-900 text-white rounded-lg hover:bg-blue-800 transition-colors font-medium text-lg shadow-sm">
                                Panneau de contrôle
                            </a>
                        {% elseif is_granted('ROLE_USER') and not is_granted('ROLE_ORGANIZER') %}
                            {% if app.user.team %}
                                <a href="{{ path('app_team_edit', {id: app.user.team.id}) }}"
                                   class="px-8 py-4 bg-blue-900 text-white rounded-lg hover:bg-blue-800 transition-colors font-medium text-lg shadow-sm">
                                    Mon équipe
                                </a>
                            {% else %}
                                <a href="{{ path('app_team') }}"
                                   class="px-8 py-4 bg-blue-900 text-white rounded-lg hover:bg-blue-800 transition-colors font-medium text-lg shadow-sm">
                                    Créer une équipe
                                </a>
                            {% endif %}
                        {% endif %}
                    </div>
                {% endif %}

                <div class="pt-4 flex justify-center">
                    <a href="{{ path('app_match_list') }}"
                       class="px-8 py-4 bg-white text-blue-900 rounded-lg hover:bg-slate-50 transition-colors font-medium text-lg border border-blue-200 shadow-sm">
                        Voir les matchs
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}