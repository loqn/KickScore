{% extends 'base.html.twig' %}

{% block title %}Erreur - KickScore{% endblock %}

{% block body %}
    <div class="flex items-center flex-col justify-center min-h-screen">
    {% for message in app.flashes('error') %}
        <div class="bg-red-50 border border-red-200 text-red-800 rounded-lg p-4 mb-6">
            <p class="text-lg font-semibold"> <span>{{'root.error' | trans}}</span> </p>
            <p class="text-sm font-medium">{{ message }}</p>
        </div>
    {% endfor %}
        <a href="{{ path('app_root') }}"
           class="inline-block px-6 py-3 bg-blue-900 text-white rounded-lg hover:bg-blue-800 transition-colors">
            {{'root.home'|trans}}
        </a>
    </div>
{% endblock %}