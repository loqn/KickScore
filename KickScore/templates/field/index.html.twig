{% extends 'base.html.twig' %}

{% block title %}Hello FieldController!{% endblock %}

{% block body %}

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>                   
<div class="flex items-center justify-center min-h-screen">
    <div class="example-wrapper">
        <form method="post" action="{{ path('app_field_create') }}">
            <div id="scores_container" class="space-y-4 flex flex-col items-center justify-center">
                <div class="space-y-1 flex justify-center">
                    <label for="name" class="text-sm font-medium text-slate-700">Buts verts</label>
                    <input type="text" id="name" name="name"
                        class="w px-4 py-3 rounded-lg border border-slate-200 bg-green-50 focus:ring-2 focus:ring-blue-900 focus:border-blue-900 transition-colors">
                </div>
                <div class="flex justify-center">
                    <button type="submit" class="px-4 py-2 bg-green-600 text-white text-sm rounded-lg hover:bg-green-700 transition-colors font-medium shadow-sm">
                        Create a field
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

{% endblock %}
